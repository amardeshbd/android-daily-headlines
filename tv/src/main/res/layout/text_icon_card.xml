<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <!-- Picking right font family - http://stackoverflow.com/questions/12128331/how-to-change-fontfamily-of-textview-in-android -->
    <RelativeLayout
        android:id="@+id/headline_card_root_container"
        android:layout_width="@dimen/card_text_container_width"
        android:layout_height="@dimen/card_text_container_height">


        <ImageView
            android:id="@+id/main_content_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


        <TextView
            android:id="@+id/extra_text"
            style="@style/Widget.Leanback.ImageCardView.ContentStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/default_card_background_color"
            android:fontFamily="sans-serif-black"
            android:lines="5"
            android:maxLines="5"
            android:paddingBottom="14dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:textSize="34sp"
            lb:layout_viewType="main"
            tools:text="This is a headline title that can be long. It may be truncated if the text is too long." />


        <FrameLayout
            android:layout_width="@dimen/card_text_container_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/default_card_footer_background_color"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingBottom="7dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="7dp">

            <TextView
                android:id="@+id/primary_text"
                style="@style/Widget.Leanback.ImageCardView.ContentStyle"
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:lines="3"
                android:maxLines="3"
                tools:text="This is a headline title that can be long. It may be truncated if the text is too long." />
        </FrameLayout>
    </RelativeLayout>

</merge>