<!-- TODO: Move strings to resources -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:summary="Update your preferences."
                  android:title="Headlines Preference">
    <PreferenceScreen
        android:icon="@drawable/ic_action_name"
        android:key="prefs_date_time_screen_key"
        android:title="Enable/Disable Headlines Category">
        <CheckBoxPreference
            android:defaultValue="true"
            android:disableDependentsState="true"
            android:key="@string/prefs_key_content_category_top_headlines"
            android:summaryOff="@string/general_item_disabled"
            android:summaryOn="@string/general_item_disabled"
            android:title="@string/category_name_top_news"/>
        <CheckBoxPreference
            android:defaultValue="true"
            android:disableDependentsState="true"
            android:key="@string/prefs_key_content_category_business"
            android:summaryOff="@string/general_item_disabled"
            android:summaryOn="@string/general_item_disabled"
            android:title="@string/category_name_business"/>
        <CheckBoxPreference
            android:defaultValue="true"
            android:disableDependentsState="true"
            android:key="@string/prefs_key_content_category_technology"
            android:summaryOff="@string/general_item_disabled"
            android:summaryOn="@string/general_item_disabled"
            android:title="@string/category_name_technology"/>
        <CheckBoxPreference
            android:defaultValue="true"
            android:disableDependentsState="true"
            android:key="@string/prefs_key_content_category_sports"
            android:summaryOff="@string/general_item_disabled"
            android:summaryOn="@string/general_item_disabled"
            android:title="@string/category_name_sports"/>

    </PreferenceScreen>
</PreferenceScreen>
